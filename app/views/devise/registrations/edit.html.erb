<div class="card shadow mx-auto mt-5 w-50">
  <div class="card-header text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, autocomplete: "username" %>
      </div>

      <div class="form-group">
        <%= f.label :bio %><br />
        <%= f.text_field :bio, autocomplete: "bio" %>
      </div>

      <div class="form-group">
        <strong>Upload Profile Pic</strong><br>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.label :location %><br />
        <%= f.text_field :location, autocomplete: "location" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, "Change Password" %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "6 characters minimum" %>
          <p class="form-text text-muted">Leave blank if you don't wish to change your password.</p>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i class="text-danger">required</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
<%= link_to "Back", :back %>

</div>